<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="248dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="427dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="270dp"
        android:fontFamily="@font/josefin_sans_semibold"
        android:text="Instructions:"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/whattotrack"
        android:layout_width="369dp"
        android:layout_height="156dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="468dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="107dp"
        android:background="@drawable/create_workout_searchbar"
        android:drawablePadding="5dp"
        android:drawableTint="#433535"
        android:ems="18"
        android:hint="Tips about how to perform this movement"
        android:inputType="text"
        android:paddingStart="15dp"
        android:textColor="#433535"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView52"

        android:layout_width="248dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="194dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="503dp"
        android:fontFamily="@font/josefin_sans_semibold"
        android:text="What is the title of the workout?"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchExercise"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="433dp"
        android:background="@drawable/create_workout_searchbar"
        android:drawablePadding="5dp"
        android:drawableTint="#433535"
        android:ems="18"
        android:hint="Title"
        android:inputType="text"
        android:paddingStart="15dp"
        android:textColor="#433535"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="285dp"
        android:layout_marginBottom="655dp"
        android:backgroundTint="#fef7ff"
        android:drawableLeft="@drawable/ic_baseline_arrow"
        android:fontFamily="@font/josefin_sans_semibold"
        android:paddingLeft="18dp"
        android:text="Back"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/chooseExercise"
        android:layout_width="215dp"
        android:layout_height="51dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="566dp"
        android:fontFamily="@font/josefin_sans_semibold"
        android:text="New Exercise"
        android:textSize="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView60"

        android:layout_width="248dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="317dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="380dp"
        android:fontFamily="@font/josefin_sans_semibold"
        android:text="What do you want to track?"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/whattotrack61"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="315dp"
        android:background="@drawable/create_workout_searchbar"
        android:drawablePadding="5dp"
        android:drawableTint="#433535"
        android:ems="18"
        android:hint="For Completion"
        android:inputType="text"
        android:paddingStart="15dp"
        android:textColor="#433535"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="200dp"
        android:layout_height="53dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="648dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="31dp"
        android:fontFamily="@font/josefin_sans"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>